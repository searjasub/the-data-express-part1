extends header

block content
    each item in people
        tr
            td
                a(href='/details/' + item.id) #{item.id}
            td #{item.name}
            td #{item.age}
            td #{item.species}
            td #{item.email}
            td
                a(href='/edit/' + item.id) Edit
            td
                a(href='/delete/' + item.id) Delete